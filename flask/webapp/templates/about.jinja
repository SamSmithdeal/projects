{% extends "appbuilder/base.html" %}
{% block content %}
<style>


  *{
    font-family: "Raleway";
  }
  #grid{
    width: 100%;
    height: 200px;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: repeat(2, 1fr);
    gap: 40px;
  }

  .float-img{
    float: left;
    margin-right: 20px;
  }

  li a{
  display: inline-block;
  margin-top: 10px;
  padding: 5px 20px;
  background: linear-gradient(to left, #fff 50%, #4582ec 40%) right;
  background-size: 200%;
  border-radius: 8%;
  font-family: "Raleway";
  color: black;
  text-decoration: none;
  transition: 0.5s ease-out;
  font-weight: bolder;
  background-position: right;
}
li a:hover{
    color: #fff;
    background-position: left;
    border: 2px solid black;
  }
#container{
  background-color: white;
}
</style>
<div class="container" style="font-size: larger;">
  {{ content }}
</div>
<script>
  const b = document.querySelectorAll("a");
  for(var x = 0;x<b.length;x++){
    b[x].style.border = "2px solid white";
  }
</script>
{% endblock %}
